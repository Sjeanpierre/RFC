<h1>New Change Request</h1>
<%= tinymce :simple %>
<%= simple_form_for @change, url: {action: 'create'} do |f| %>
  <div class="title-input">
    <div class="input-group">
      <%=f.input :title,:label => false,:input_html => {:class => 'form-control input-lg', :placeholder => 'Please Enter Title For Change Request'}%>
      <span class="input-group-addon">0/160 Chars</span>
	  </div>
  </div>
  <div id='horizontal' class="horizontal">




    <div id='drop-down'>
      <%= f.input :priority, :as => :select, :collection =>  Priority.all.map {|p| p.name.capitalize}, :input_html => {:class => 'select2 priority-wrapper',:placeholder => 'Select Priority', :style => 'width: 200px'}%>
	    <div id="newlink"><span id='priority-adder' class="glyphicon glyphicon-plus-sign"></span></div>
    </div>

    <div id='drop-down'>
      <%= f.input :status, :collection => Status.all.map {|s| s.name.capitalize}, :input_html => {:class => 'select2 status-wrapper',:placeholder => 'Select Status', :style => 'width: 200px'}%>
      <div id="newlink"><span id='status-adder' class="glyphicon glyphicon-plus-sign"></span></div>
	  </div>

    <div id='drop-down'>
      <%= f.input :system, :collection => System.all.map {|s| s.name.capitalize}, :input_html => {:class => 'select2 system-wrapper',:placeholder => 'Select Impacted System', :style => 'width: 200px'}%>
      <div id="newlink"><span id='system-adder' class="glyphicon glyphicon-plus-sign"></span></div>
    </div>

    <div id='drop-down'>
      <%= f.input :change_type, :collection => ChangeType.all.map {|t| t.name.capitalize}, :input_html => {:class => 'select2 changeType-wrapper',:placeholder => 'Select Change Type', :style => 'width: 200px'}%>
      <div id="newlink"><span id='change-type-adder' class="glyphicon glyphicon-plus-sign"></span></div>
    </div>

    <div id='drop-down'>
      <%= f.input :impact, :collection => Impact.all.map {|i| i.name.capitalize}, :input_html => {:class => 'select2 impact-wrapper',:placeholder => 'Select Expected Impact', :style => 'width: 200px'} %>
      <div id="newlink"><span id='impact-adder' class="glyphicon glyphicon-plus-sign"></span></div>
    </div>

  </div>
  <%= f.input :summary, as: :text, :input_html => {:class => 'tinymce', :rows => 15}%>
  <%= f.input :rollback, as: :text, :input_html => {:class => 'tinymce', :rows => 15}%><br>
  <%= f.button :submit, :class => 'btn btn-primary btn-lg' %>
<% end %>