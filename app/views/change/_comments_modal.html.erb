<div class="modal fade bs-modal-sm" tabindex="-1" id="commentsModal" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Resources</h4>
      </div>
      <div class="modal-body">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs">
          <li class="active"><a href="#comments" data-toggle="tab">Comments <span id="comment-count" class="badge"><%= @change.comment_threads.count %></span></a></li>
          <li><a href="#uploads" data-toggle="tab">Uploads</a></li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
          <div class="tab-pane active" id="comments">

            <div class="comment-list">
              <% if @change.comment_threads.any? %>
                <%= render :partial => 'comments' %>
              <% end %>
            </div>

            <%= render :partial => 'comment_form' %>
            <button type="button" id="new-comment-button" class="btn btn-primary">
              <span class="glyphicon glyphicon-edit"></span> New Comment
            </button>


          </div>
          <div class="tab-pane" id="uploads">...</div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>