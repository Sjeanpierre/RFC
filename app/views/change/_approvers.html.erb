<div class="approver-list">
  <ul>
    <li><strong>Approvers:</strong></li>
    <% @change.approvers.each do |approver| %>
		  <% user = approver.user %>
      <li class="approver"><span class="label label-default approver-colors"><abbr title="<%= user.name %>" class="initialism"><strong><%= user.initials %></strong></abbr></span></li>
    <% end %>
  </ul>
</div>
