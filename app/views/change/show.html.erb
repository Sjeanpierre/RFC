<div class="change-heading cdata" data-cid="<%= @change.id %>" data-cstatus="<%= @change.status.name %>">
  <%= tinymce :simple %>
  <h2><%= @change.title.capitalize %> <span class="change-id">#<%= @change.id %></span></h2>
	<div class="change-subheading">
  <button disabled id="status-indicator-button" class="btn btn-sm">
    <span id="status-indicator-span" class="glyphicon"></span> <%= @change.status.name.capitalize %>
  </button>
  <span class="creator"> <%= @change.creator.name %></span> <span class="created">created this change</span>
  <small  class="text-muted"><i class="glyphicon glyphicon-time"></i>
    <abbr title="<%= @change.created_at.to_s(:long) %>" data-livestamp="<%= @change.created_at.utc.iso8601 %>"></abbr>
  </small>
  <small data-toggle="modal" data-target="#commentsModal" class="text-muted link"><i class="glyphicon glyphicon-comment"></i>
    <%= pluralize(@change.comment_threads.count, 'Comment') %>
  </small>
  <small data-toggle="modal" data-target="#commentsModal" class="text-muted link"><i class="glyphicon glyphicon-paperclip"></i>
    <%= pluralize(@change.attachments.count, 'Attachment') %>
  </small>
	</div>
</div>

<div class="row">
  <div class="col-md-3 change-details-container">
    <%= render :partial => 'change_details' %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default change-textarea-container">
      <div class="panel-heading">
        <h3 class="panel-title">Change Summary</h3>
        <span class="glyphicon glyphicon-pencil edit-textarea-icon"></span>
      </div>
      <div class="panel-body">
        <div id="summary" class="text-updatable"><%= Sanitize.clean(@change.summary, Sanitize::Config::RELAXED).html_safe %></div>
      </div>
    </div>
    <div class="panel panel-default change-textarea-container">
      <div class="panel-heading">
        <h3 class="panel-title">Rollback Plan</h3>
        <span class="glyphicon glyphicon-pencil edit-textarea-icon"></span>
      </div>
      <div class="panel-body">
        <div id="rollback" class="text-updatable"><%= Sanitize.clean(@change.rollback, Sanitize::Config::RELAXED).html_safe %></div>
      </div>
    </div>
  </div>
</div>

<% if @change.status.name == 'approved' %>
  <%= render :partial => 'post_approval' %>
<% end %>

<% unless %w(approved completed).include?(@change.status.name)
     if @change.approvers.map(&:user_id).include?(current_user.id) %>
    <%= render :partial => 'approval_buttons' %>
  <% end %>
<% end %>

<%= render :partial => 'comments_modal' %>
<%= render :partial => 'events' %>



